<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softwareengineering.clubhouseapp.ResourceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resources_groups"/>

    <ListView
        android:id="@+id/list_resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/upload_resources_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_resources"
        android:onClick="onClickUploadResources"/>

    <Button
        android:id="@+id/download_resources_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_resources"
        android:onClick="onClickDownloadResources"
        tools:ignore="DuplicateIds" />

</LinearLayout>
