<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.softwareengineering.clubhouseapp.GroupMenuActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            android:contentDescription="@string/group_icon"/>

        <TextView
            android:id="@+id/group_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text=""/>

    </LinearLayout>

    <Button
        android:id="@+id/view_members_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_members"
        android:onClick="onClickViewMembers"/>

    <Button
        android:id="@+id/view_calendar_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_calendar"
        android:onClick="onClickViewCalendar"/>

    <Button
        android:id="@+id/view_resources_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_resouces"
        android:onClick="onClickViewResources"/>

    <Button
        android:id="@+id/join_meeting_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/join_meeting"
        android:onClick="onClickJoinMeeting"/>

    <Button
        android:id="@+id/start_meeting_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_meeting"
        android:onClick="onClickJoinMeeting"/>


</LinearLayout>
